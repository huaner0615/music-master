<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >    <include layout="@layout/news_title_bar" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:background="@drawable/play_bg"        android:paddingBottom="5dp"        android:paddingTop="10dp"        android:layout_marginTop="1dp"        >        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:orientation="horizontal"            >            <TextView                android:id="@+id/playview_tv_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="22sp"                android:textColor="#000000"                android:text="歌曲名称"                />            <TextView                android:id="@+id/playview_tv_time"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="14sp"                android:text="时间"                android:layout_marginLeft="20sp"                />        </LinearLayout>        <SeekBar            android:id="@+id/playview_sb_seekbar"            android:layout_width="match_parent"            android:layout_height="wrap_content"/>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            >            <TextView                android:id="@+id/playview_tv_word"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:maxEms="20"                android:layout_marginLeft="10dp"                />            <View                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="match_parent"/>            <Button                android:id="@+id/playview_bt_start_pause"                android:layout_width="40dp"                android:layout_height="40dp"                android:background="@drawable/play_start"                />            <Button                android:id="@+id/playview_bt_next"                android:layout_width="40dp"                android:layout_height="40dp"                android:background="@drawable/play_next"                android:layout_marginRight="10dp"                />        </LinearLayout>    </LinearLayout>    <ListView        android:id="@+id/fragement_lv_songlist"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:divider="#ddd"        android:dividerHeight="1dp"        android:layout_marginTop="10dp"        >    </ListView></LinearLayout>